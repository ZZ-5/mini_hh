{
  "compilerOptions": {
    "outDir": "./dist/",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "lib": ["es6", "dom", "es2017"],
    "paths": {},
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}